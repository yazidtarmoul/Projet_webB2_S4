{% extends "base.html.twig" %}
{% block content %}
<style>
    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px; 
    }
    .form-container div {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 10px; 
    }
    .form-container label {
        width: 200px;
        text-align: right; 
        margin-right: 10px; 
    }
</style>

 <header class="header">
        <img class="imgheader1" src="img/image-removebg-preview 2.png" alt="Logo accord énergie">
        <img class="imgheader2" src="img/image 18 (1).png" alt="Logo paramètre">
        <img class="imgheader3" src="img/image 18.png" alt="Logo page profile">
    </header>
    <main>
        <form class="form-container" action="" method="post">
            <div class="form-group">
                <label for="email">Email :</label>
                <input type="email" required="required" id="email" name="email" value="{{ tableData['email'] }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="nom">Nom :</label>
                <input type="text" required="required" id="nom" name="nom" value="{{ tableData['nom'] }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="prenom">Prénom :</label>
                <input type="text" required="required" id="prenom" name="prenom" value="{{ tableData['prenom'] }}" class="form-control">
            </div>

<div class="form-group">
    <label for="role">Rôle :</label>
    <select id="role" name="role" class="form-control" required="required">
        <option value="" selected disabled>Choisissez un rôle &#8595;</option>
        <option value="client">Client</option>
        <option value="standardiste">Standardiste</option>
        <option value="intervenant">Intervenant</option>
        <option value="admin">Admin</option>
    </select>
</div>
            <div class="form-group">
                <label for="telephone">Téléphone :</label>
                <input type="tel" required="required" id="telephone" name="telephone" value="{{ tableData['telephone'] }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="pays">Pays :</label>
                <input type="text" required="required" id="pays" name="pays" value="{{ tableData['pays'] }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="ville">Ville :</label>
                <input type="text" required="required" id="ville" name="ville" value="{{ tableData['ville'] }}" class="form-control">
            </div>
            <input type="submit" name="envoyer" value="Envoyer" class="btn btn-primary">
        </form>
    </main>
{% endblock %}
